<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainPageServlet</servlet-name>
        <servlet-class>MainPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLoginServlet</servlet-name>
        <servlet-class>ProcessLoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProcessLogoutServlet</servlet-name>
        <servlet-class>ProcessLogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowLoginServlet</servlet-name>
        <servlet-class>ShowLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainPageServlet</servlet-name>
        <url-pattern>/MainPageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLoginServlet</servlet-name>
        <url-pattern>/ProcessLoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProcessLogoutServlet</servlet-name>
        <url-pattern>/ProcessLogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowLoginServlet</servlet-name>
        <url-pattern>/ShowLoginServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>MainPageServlet</welcome-file>
    </welcome-file-list>
</web-app>
